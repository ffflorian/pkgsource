{
  "components": {
    "schemas": {
      "RawError": {
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        },
        "required": ["code", "url"],
        "type": "object"
      },
      "RawQuery": {
        "description": "Get the result as JSON",
        "type": "boolean"
      },
      "RawResult": {
        "example": {
          "code": 200,
          "url": "https://github.com/ffflorian/pkgsource"
        },
        "properties": {
          "code": {
            "type": "integer"
          },
          "url": {
            "type": "string"
          }
        },
        "required": ["code", "url"],
        "type": "object"
      },
      "UnpkgQuery": {
        "description": "Get a link to unpkg.com",
        "type": "boolean"
      }
    }
  },
  "info": {
    "contact": {
      "url": "https://github.com/ffflorian"
    },
    "description": "Find the source of an npm package in an instant.",
    "license": {
      "name": "GPL-3.0",
      "url": "https://github.com/ffflorian/pkgsource/blob/master/LICENSE"
    },
    "title": "pkgsource",
    "version": "1.3.0"
  },
  "openapi": "3.0.0",
  "paths": {
    "/": {
      "get": {
        "description": "Get the server's repository URL",
        "operationId": "getServerRepositoryUrl",
        "parameters": [
          {
            "in": "query",
            "name": "raw",
            "required": false,
            "schema": {
              "$ref": "#/components/schemas/RawQuery"
            }
          },
          {
            "in": "query",
            "name": "unpkg",
            "required": false,
            "schema": {
              "$ref": "#/components/schemas/UnpkgQuery"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RawResult"
                }
              }
            },
            "description": "That worked"
          },
          "302": {
            "description": "Redirect to repository URL",
            "headers": {
              "Location": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "tags": ["API"]
      }
    },
    "/_health/": {
      "get": {
        "description": "Get the server's health status",
        "operationId": "getServerHealth",
        "responses": {
          "200": {
            "description": "Everything is ok"
          }
        },
        "tags": ["Server Info"]
      }
    },
    "/{packageName}/": {
      "get": {
        "description": "Get the package's repository URL",
        "operationId": "getPackageRepositoryUrl",
        "parameters": [
          {
            "in": "path",
            "name": "packageName",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "raw",
            "required": false,
            "schema": {
              "$ref": "#/components/schemas/RawQuery"
            }
          },
          {
            "in": "query",
            "name": "unpkg",
            "required": false,
            "schema": {
              "$ref": "#/components/schemas/UnpkgQuery"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RawResult"
                }
              }
            },
            "description": "That worked"
          },
          "302": {
            "description": "Redirect to repository URL",
            "headers": {
              "Location": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/RawError"
                    },
                    {
                      "example": {
                        "code": 404,
                        "url": "Package not found"
                      }
                    }
                  ]
                }
              }
            },
            "description": "Version or package not found"
          },
          "422": {
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/RawError"
                    },
                    {
                      "example": {
                        "code": 422,
                        "url": "Invalid package name"
                      }
                    }
                  ]
                }
              }
            },
            "description": "Invalid package name"
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/RawError"
                    },
                    {
                      "example": {
                        "code": 500,
                        "url": "Internal server error"
                      }
                    }
                  ]
                }
              }
            },
            "description": "Internal server error"
          }
        },
        "tags": ["API"]
      }
    }
  },
  "tags": [
    {
      "name": "API"
    },
    {
      "name": "Server Info"
    }
  ]
}
