{
  "author": "Florian Imdahl <git@ffflorian.de>",
  "dependencies": {
    "date-fns": "4.1.0",
    "express": "5.1.0",
    "find-up": "7.0.0",
    "helmet": "8.1.0",
    "http-status-codes": "2.3.0",
    "logdown": "3.3.1",
    "nocache": "4.0.0",
    "package-json": "10.0.1",
    "pm2": "6.0.6",
    "swagger-ui-express": "5.0.1",
    "validate-npm-package-name": "6.0.0"
  },
  "description": "Find the source of an npm package in an instant.",
  "devDependencies": {
    "@babel/core": "7.27.4",
    "@babel/eslint-parser": "7.27.1",
    "@evilmartians/lefthook": "1.11.13",
    "@ffflorian/eslint-config": "0.10.3",
    "@ffflorian/prettier-config": "0.3.3",
    "@ffflorian/semantic-release-config": "0.7.3",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@swc/core": "1.11.29",
    "@types/express": "5.0.1",
    "@types/node": "~22",
    "@types/swagger-ui-express": "4.1.8",
    "@types/validate-npm-package-name": "4.0.2",
    "@typescript-eslint/eslint-plugin": "8.33.0",
    "@typescript-eslint/parser": "8.31.1",
    "babel-eslint": "10.1.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jasmine": "4.2.2",
    "eslint-plugin-jsdoc": "50.6.11",
    "eslint-plugin-no-unsanitized": "4.1.2",
    "eslint-plugin-prettier": "5.4.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-typescript-sort-keys": "3.3.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "oxlint": "0.17.0",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "semantic-release": "24.2.3",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">= 20"
  },
  "files": [
    "dist",
    "swagger.json"
  ],
  "homepage": "https://pkgsource.xyz",
  "keywords": [
    "cli",
    "typescript"
  ],
  "license": "GPL-3.0",
  "main": "dist/index.js",
  "name": "pkgsource",
  "packageManager": "yarn@3.5.0",
  "prettier": "@ffflorian/prettier-config",
  "release": {
    "extends": "@ffflorian/semantic-release-config"
  },
  "repository": "https://github.com/ffflorian/pkgsource.git",
  "scripts": {
    "build": "tsc",
    "build:commit": "git rev-parse HEAD > commit",
    "clean": "rimraf dist",
    "dev": "yarn start:dev",
    "dist": "yarn clean && yarn build && yarn build:commit",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix",
    "lint": "yarn lint:ts && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "oxlint --ignore-path .gitignore src/",
    "postversion": "VERSION=$(jq '.version' package.json) && jq \".info.version |= ${VERSION}\" swagger.json > swagger.tmp && mv swagger.tmp swagger.json",
    "prettier": "prettier \"*.{json,md,yml}\"",
    "release": "semantic-release",
    "start": "pm2 start",
    "start:dev": "yarn build:commit && NODE_DEBUG=\"pkgsource/*\" node --loader ts-node/esm src/index.ts"
  },
  "type": "module",
  "version": "1.8.1"
}
