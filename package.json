{
  "author": "Florian Keller <github@floriankeller.de>",
  "dependencies": {
    "cross-env": "7.0.2",
    "date-fns": "2.14.0",
    "express": "4.17.1",
    "forever": "3.0.0",
    "helmet": "3.23.3",
    "http-status-codes": "1.4.0",
    "is-url-superb": "4.0.0",
    "logdown": "3.3.1",
    "package-json": "6.5.0",
    "swagger-ui-express": "4.1.4",
    "validate-npm-package-name": "3.0.0"
  },
  "description": "Find the source of an npm package in an instant.",
  "devDependencies": {
    "@ffflorian/eslint-config": "0.6.0",
    "@ffflorian/prettier-config": "0.1.0",
    "@ffflorian/semantic-release-config": "0.3.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@types/express": "4.17.6",
    "@types/helmet": "0.0.47",
    "@types/jasmine": "3.5.11",
    "@types/node": "~14",
    "@types/swagger-ui-express": "4.1.2",
    "@types/validate-npm-package-name": "3.0.0",
    "@typescript-eslint/eslint-plugin": "3.5.0",
    "@typescript-eslint/parser": "3.5.0",
    "babel-eslint": "10.1.0",
    "eslint": "7.4.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jasmine": "4.1.1",
    "eslint-plugin-jsdoc": "28.6.1",
    "eslint-plugin-no-unsanitized": "3.1.2",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "eslint-plugin-sort-keys-fix": "1.1.1",
    "eslint-plugin-typescript-sort-keys": "1.2.0",
    "husky": "4.2.5",
    "jasmine": "3.5.0",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "publish-flat": "1.4.0",
    "rimraf": "3.0.2",
    "semantic-release": "17.1.1",
    "ts-node": "8.10.2",
    "typescript": "3.9.6"
  },
  "engines": {
    "node": ">= 10.9"
  },
  "files": [
    "dist",
    "swagger.json"
  ],
  "homepage": "https://pkgsource.xyz",
  "keywords": [
    "cli",
    "typescript"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "GPL-3.0",
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write"
    ],
    "spec/**/*.ts": [
      "eslint --config .eslintrc.spec.json --fix"
    ],
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "main": "dist/index.js",
  "name": "pkgsource",
  "prettier": "@ffflorian/prettier-config",
  "release": {
    "extends": "@ffflorian/semantic-release-config"
  },
  "repository": "https://github.com/ffflorian/pkgsource.git",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dist": "yarn clean && yarn build",
    "flatten": "publish-flat -o flattened",
    "fix": "yarn fix:other && yarn fix:ts && yarn fix:ts:spec",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix && yarn lint:ts:spec --fix",
    "fix:ts:spec": "yarn lint:ts:spec --fix",
    "lint": "yarn lint:ts && yarn lint:ts:spec && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:ts:spec": "eslint --ignore-path .gitignore --ext .ts --config .eslintrc.spec.json spec/",
    "postversion": "node ../node_modules/publish-flat/cli-copy.js -i package.json -o ../package.json version",
    "prettier": "prettier \"*.{json,md,yml}\"",
    "release": "semantic-release",
    "start": "forever dist/index.js",
    "start:dev": "cross-env NODE_DEBUG=\"pkgsource/*\" ts-node src/index.ts",
    "test": "ts-node -P tsconfig.jasmine.json node_modules/.bin/jasmine"
  },
  "version": "1.4.4"
}
