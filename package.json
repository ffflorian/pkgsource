{
  "author": "Florian Imdahl <git@ffflorian.de>",
  "dependencies": {
    "date-fns": "4.1.0",
    "express": "5.2.1",
    "find-up": "8.0.0",
    "helmet": "8.1.0",
    "http-status-codes": "2.3.0",
    "logdown": "3.3.1",
    "nocache": "4.0.0",
    "package-json": "10.0.1",
    "pm2": "6.0.14",
    "swagger-ui-express": "5.0.1",
    "validate-npm-package-name": "7.0.2"
  },
  "description": "Find the source of an npm package in an instant.",
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@evilmartians/lefthook": "2.0.16",
    "@ffflorian/eslint-config": "0.12.4",
    "@ffflorian/prettier-config": "0.5.4",
    "@ffflorian/semantic-release-config": "0.10.3",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/express": "5.0.6",
    "@types/node": "~22",
    "@types/swagger-ui-express": "4.1.8",
    "@types/validate-npm-package-name": "4.0.2",
    "eslint": "9.39.2",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-oxlint": "1.42.0",
    "eslint-plugin-perfectionist": "5.4.0",
    "globals": "17.3.0",
    "jiti": "2.6.1",
    "oxlint": "1.43.0",
    "prettier": "3.8.1",
    "semantic-release": "25.0.3",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0"
  },
  "engines": {
    "node": ">= 20"
  },
  "files": [
    "dist",
    "swagger.json"
  ],
  "homepage": "https://pkgsource.ffflorian.dev",
  "keywords": [
    "cli",
    "typescript"
  ],
  "license": "GPL-3.0",
  "main": "dist/index.js",
  "name": "pkgsource",
  "packageManager": "yarn@4.12.0",
  "prettier": "@ffflorian/prettier-config",
  "release": {
    "extends": "@ffflorian/semantic-release-config"
  },
  "repository": "https://github.com/ffflorian/pkgsource.git",
  "scripts": {
    "build": "tsc",
    "build:commit": "git rev-parse HEAD > commit",
    "clean": "rm -rf dist",
    "dev": "yarn start:dev",
    "dist": "yarn clean && yarn build && yarn build:commit",
    "fix": "yarn fix:ts && yarn fix:other",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts:oxlint --fix && yarn lint:ts:eslint --fix",
    "lint": "yarn lint:other && yarn lint:ts",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "yarn lint:ts:oxlint && yarn lint:ts:eslint",
    "lint:ts:eslint": "eslint .",
    "lint:ts:oxlint": "oxlint --ignore-path .gitignore .",
    "postversion": "VERSION=$(jq '.version' package.json) && jq \".info.version |= ${VERSION}\" swagger.json > swagger.tmp && mv swagger.tmp swagger.json",
    "prettier": "prettier \"*.{json,md,yml}\"",
    "release": "semantic-release",
    "start": "pm2 start",
    "start:dev": "yarn build:commit && NODE_DEBUG=\"pkgsource/*\" tsx src/index.ts"
  },
  "type": "module",
  "version": "1.8.1"
}
