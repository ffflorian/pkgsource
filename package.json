{
  "author": "Florian Imdahl <git@ffflorian.de>",
  "dependencies": {
    "cross-env": "7.0.3",
    "date-fns": "2.30.0",
    "express": "4.18.2",
    "find-up": "5.0.0",
    "helmet": "7.1.0",
    "http-status-codes": "2.3.0",
    "logdown": "3.3.1",
    "nocache": "4.0.0",
    "package-json": "7.0.0",
    "pm2": "5.3.0",
    "swagger-ui-express": "5.0.0",
    "validate-npm-package-name": "5.0.0"
  },
  "description": "Find the source of an npm package in an instant.",
  "devDependencies": {
    "@evilmartians/lefthook": "1.5.2",
    "@ffflorian/eslint-config": "0.8.3",
    "@ffflorian/prettier-config": "0.3.1",
    "@ffflorian/semantic-release-config": "0.7.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/express": "4.17.20",
    "@types/jasmine": "5.1.2",
    "@types/node": "~18",
    "@types/swagger-ui-express": "4.1.5",
    "@types/validate-npm-package-name": "4.0.2",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.10.0",
    "babel-eslint": "10.1.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jasmine": "4.1.3",
    "eslint-plugin-jsdoc": "46.9.0",
    "eslint-plugin-no-unsanitized": "4.0.2",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-typescript-sort-keys": "3.1.0",
    "eslint-plugin-unused-imports": "1.1.5",
    "jasmine": "5.1.0",
    "prettier": "3.1.0",
    "rimraf": "5.0.5",
    "semantic-release": "22.0.7",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": ">= 14.10"
  },
  "files": [
    "dist",
    "swagger.json"
  ],
  "homepage": "https://pkgsource.xyz",
  "keywords": [
    "cli",
    "typescript"
  ],
  "license": "GPL-3.0",
  "main": "dist/index.js",
  "name": "pkgsource",
  "packageManager": "yarn@3.5.0",
  "prettier": "@ffflorian/prettier-config",
  "release": {
    "extends": "@ffflorian/semantic-release-config"
  },
  "repository": "https://github.com/ffflorian/pkgsource.git",
  "scripts": {
    "build": "tsc",
    "build:commit": "git rev-parse HEAD > commit",
    "clean": "rimraf dist",
    "dist": "yarn clean && yarn build && yarn build:commit",
    "fix": "yarn fix:other && yarn fix:ts && yarn fix:ts:spec",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix && yarn lint:ts:spec --fix",
    "fix:ts:spec": "yarn lint:ts:spec --fix",
    "lint": "yarn lint:ts && yarn lint:ts:spec && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:ts:spec": "eslint --ignore-path .gitignore --ext .ts --config .eslintrc.spec.json spec/",
    "postversion": "VERSION=$(jq '.version' package.json) && jq \".info.version |= ${VERSION}\" swagger.json > swagger.tmp && mv swagger.tmp swagger.json",
    "prettier": "prettier \"*.{json,md,yml}\"",
    "release": "semantic-release",
    "start": "pm2 start",
    "start:dev": "yarn build:commit && cross-env NODE_DEBUG=\"pkgsource/*\" ts-node src/index.ts",
    "test": "ts-node -P tsconfig.jasmine.json node_modules/.bin/jasmine"
  },
  "version": "1.8.1"
}
