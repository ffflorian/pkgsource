{
  "author": "Florian Keller <github@floriankeller.de>",
  "dependencies": {
    "cross-env": "6.0.3",
    "express": "4.17.1",
    "helmet": "3.21.2",
    "http-status-codes": "1.4.0",
    "logdown": "3.3.0",
    "moment": "2.24.0",
    "package-json": "6.5.0",
    "pm2": "4.2.2",
    "pm2-logrotate": "2.7.0",
    "swagger-ui-express": "4.1.2",
    "url-regex": "5.0.0",
    "validate-npm-package-name": "3.0.0"
  },
  "description": "Find the source of an npm package in an instant.",
  "devDependencies": {
    "@ffflorian/prettier-config": "0.0.6",
    "@ffflorian/semantic-release-config": "0.2.0",
    "@ffflorian/tslint-config": "0.7.1",
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/git": "8.0.0",
    "@types/express": "4.17.2",
    "@types/helmet": "0.0.45",
    "@types/jasmine": "3.5.1",
    "@types/node": "~12",
    "@types/swagger-ui-express": "4.1.1",
    "@types/validate-npm-package-name": "3.0.0",
    "husky": "4.0.10",
    "jasmine": "3.5.0",
    "lint-staged": "10.0.0",
    "prettier": "1.19.1",
    "publish-flat": "1.4.0",
    "rimraf": "3.0.0",
    "semantic-release": "16.0.2",
    "ts-node": "8.6.2",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.1.0",
    "typescript": "3.7.5"
  },
  "engines": {
    "node": ">= 10.9"
  },
  "files": [
    "dist",
    "swagger.json"
  ],
  "homepage": "https://pkgsource.xyz",
  "keywords": [
    "cli",
    "typescript"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "GPL-3.0",
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write"
    ],
    "spec/**/*.ts": [
      "tslint --project tsconfig.jasmine.json --fix"
    ],
    "src/**/*.ts": [
      "tslint --project tsconfig.json --fix"
    ]
  },
  "main": "dist/index.js",
  "name": "pkgsource",
  "prettier": "@ffflorian/prettier-config",
  "release": {
    "extends": "@ffflorian/semantic-release-config"
  },
  "repository": "https://github.com/ffflorian/pkgsource.git",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dist": "yarn clean && yarn build",
    "flatten": "publish-flat -o flattened",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix && yarn lint:ts:spec --fix",
    "lint": "yarn lint:ts && yarn lint:ts:spec && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json",
    "lint:ts:spec": "tslint --project tsconfig.jasmine.json",
    "postversion": "node ../node_modules/publish-flat/cli-copy.js -i package.json -o ../package.json version",
    "prettier": "prettier \"*.{json,md,yml}\"",
    "release": "semantic-release",
    "start": "pm2 start",
    "start:dev": "cross-env NODE_DEBUG=\"pkgsource/*\" ts-node src/index.ts",
    "test": "ts-node -P tsconfig.jasmine.json node_modules/.bin/jasmine"
  },
  "version": "1.4.1"
}
